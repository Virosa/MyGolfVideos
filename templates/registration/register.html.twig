{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <main>
        <div class="grid-container">
            <div class="grid-child-image">

                <img src="{{ asset('Images/fairwayWater.png') }}" alt="faireway with water" class="image-faireway" title="Fairway with water">
            </div>
            <div class="grid-child-form">
                <div class="register">
                <h1>Cr√©er un compte </h1>



                    {{ form_start(registrationForm, {
                        'attr' : { 'class': 'register' }
                    })
                    }}

                    {{ form_row(registrationForm.name, {
                        label: 'Pseudo',
                        'attr': {'class': 'register-form'}
                        })
                    }}

                    {{ form_row(registrationForm.email, {
                        label: 'E-mail',
                        'attr': {'class': 'register-form'}
                    })
                    }}

                    {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe',
                    'attr': {'class': 'register-form'}
                    })
                    }}

                    {{ form_row(registrationForm.agreeTerms, {
                        label: 'Acceptez les conditions',
                        'attr': {'class': 'register-form'}
                        })
                    }}

                <button type="submit" class="btn">Valider</button>

                    {{ form_end(registrationForm) }}
                </div>
            </div>

            </div>


{% endblock %}
