{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <main>
        <div class="grid-container">
            <div class="grid-child-image">

                <img src="{{ asset('Images/fairwayWater.png') }}" alt="faireway with water" class="image-faireway" title="Fairway with water">
            </div>
            <div class="grid-child-form">

                <h1>Cr√©er un compte </h1>



                    {{ form_start(registrationForm, { 'attr' : { 'class': 'registration-form' } }) }}
                <div class="forminfo">

                    {{ form_row(registrationForm.pseudo, {
                        label: 'Pseudo'
                    }) }}

                {{ form_row(registrationForm.mail, {
                    label: 'E-mail'
                }) }}

                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms, {
                    label: 'Acceptez les conditions'
                }) }}

                <button type="submit" class="btn">Valider</button>

                    {{ form_end(registrationForm) }}
                </div>

            </div>


{% endblock %}
